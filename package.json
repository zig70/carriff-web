{
  "name": "carriff-web",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:carriff-web": "node dist/carriff-web/server/server.mjs",
    "dev:ssr": "ng serve --ssr",
    "serve:ssr": "ng build --configuration production && node dist/carriff-web/server/server.mjs",
    "build:ssr": "ng build --configuration production",
    "prerender": "ng run carriff-web:prerender"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.4.2",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-server": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@angular/ssr": "^21.0.0",
    "@types/dompurify": "^3.0.5",
    "compression": "^1.8.1",
    "dompurify": "^3.3.0",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.17.19",
    "jsdom": "^27.1.0",
    "sharp": "^0.34.5",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
